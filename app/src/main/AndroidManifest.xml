<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aircraftwar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AircraftWar"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.aircraftWar.application.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.aircraftWar.application.EnterNameActivity"
            android:exported="false" />
        <activity
            android:name="com.aircraftWar.application.RankActivity"
            android:exported="false" />
        <activity
            android:name="com.aircraftWar.application.LoginActivity"
            android:exported="false" />

        <service android:name="com.aircraftWar.application.MusicService" />

        <activity
            android:name="com.aircraftWar.application.EasyModeGame"
            android:exported="false" />
        <activity
            android:name="com.aircraftWar.application.CommonModeGame"
            android:exported="false" />
        <activity
            android:name="com.aircraftWar.application.DifficultModeGame"
            android:exported="false" />
        <activity
            android:name="com.aircraftWar.application.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>